<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F0D4C"
    tools:context=".SignupFragment">

    <RelativeLayout
        android:id="@+id/signupBkGrnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/polygon_3"
        android:layout_marginTop="8sp"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.imageview.ShapeableImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
    android:src="@drawable/polygon_4"
    android:layout_centerHorizontal="true"
    />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="230sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/image_2"
        android:layout_centerHorizontal="true"
        />
    </RelativeLayout>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/rgstrText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/signupBkGrnd"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    >

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here's your first"
        android:textColor="#EBBFF2"
        android:fontFamily="@font/josefin_sans_bold"
        android:textSize="25sp"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="step with us"
        android:textColor="#EBBFF2"
        android:layout_below="@id/signupBkGrnd"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/josefin_sans_bold"
        android:textSize="25sp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rgstrText"
        android:background="@drawable/form_background"
        android:layout_marginTop="5sp"
        android:padding="14sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/signupFrm"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#901493"
            android:ems="14"
            android:fontFamily="@font/inter"
            android:hint="Name:"
            android:inputType="text"
            android:textColorHint="@color/black"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:backgroundTint="#901493"
            android:hint="Username:"
            android:layout_margin="3dp"
            android:textColorHint="@color/black"
            android:fontFamily="@font/inter"
            android:inputType="text"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:layout_margin="3dp"
            android:backgroundTint="#901493"
            android:hint="Email:"
            android:textColorHint="@color/black"
            android:fontFamily="@font/inter"
            android:inputType="textEmailAddress"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:backgroundTint="#901493"
            android:hint="Password:"
            android:layout_margin="3dp"
            android:textColorHint="@color/black"
            android:fontFamily="@font/inter"
            android:inputType="textPassword"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:backgroundTint="#901493"
            android:hint="Confirm Password:"
            android:textColorHint="@color/black"
            android:layout_margin="3dp"
            android:fontFamily="@font/inter"
            android:inputType="textPassword"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/login_button_background"
            android:layout_width="220sp"
            android:layout_height="32sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6sp"
            android:text="register"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/signinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"

            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Registered ?"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="#AF3EB2"
                android:layout_margin="3sp"

                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:text="Sign in"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="#AF3EB2"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/otherMthd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupFrm"
        android:layout_margin="20sp"
        android:gravity="center"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:src="@drawable/line_3" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anonymous_pro_bold"
            android:text="Use Other Methods"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginHorizontal="10sp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:src="@drawable/line_3" />


    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gle"
        android:layout_below="@id/otherMthd"
        />




</RelativeLayout>